<View
    Name="Test"
    xmlns="xMvvm"     
    xmlns:x="xMvvm"
    ViewModelType="CompositionViewModel"        
    Prefab="CompositionView.prefab">  
    <View.Resources>                           
        <ResourceDictionary> 
            <LinearTransformationConverter Key="LinearTransformationConverter" />              
        </ResourceDictionary>
    </View.Resources>    
    <View.Bindings>             
        <Property Name="Up" Value="{x:Bind Up, Mode=OneWayToSource}" Path="Canvas/Panel/UpSlider" Type="UnityEngine.UI.Slider" Member="value" /> 
        <Property Name="Forward" Value="{x:Bind Forward, Mode=OneWayToSource}" Path="Canvas/Panel/ForwardSlider" Type="UnityEngine.UI.Slider" Member="value" /> 
        <Property Name="Rotate" Value="{x:Bind Rotate, Mode=OneWayToSource}" Path="Canvas/Panel/RotateToggle" Type="UnityEngine.UI.Toggle" Member="isOn" /> 
    </View.Bindings>              
    <View.Elements>    
        <Element Name="Canvas" Path="Canvas" />  
        <Element Name="Subject" Path="Subject" Transformation="{x:Bind SubjectTransformation, Converter={StaticResource LinearTransformationConverter}}">
            <Element.Elements>
                <Element Name="Child" Path="Child" />                         
                <Element Name="Child2" Path="Child2" />                             
            </Element.Elements>
        </Element>
    </View.Elements>     
</View>      